<Window x:Class="Assignment_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="450"
        WindowStartupLocation="CenterScreen">

    <Grid HorizontalAlignment="Left" Width="800">

        <Label x:Name="labelOPlayerName" Content="O Player" HorizontalAlignment="Left" Margin="236,49,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.13,0.123" Height="25" Width="63"/>
        <Label x:Name="labelXPlayerName" Content="X Player" HorizontalAlignment="Left" Margin="18,49,0,0" VerticalAlignment="Top" Height="25" Width="52"/>
        <TextBlock x:Name="textBlockAppName" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Tic Tac Toe" VerticalAlignment="Top" Height="28" Width="92" FontSize="18" FontWeight="Bold" />
        <TextBox x:Name="textXPlayerName" HorizontalAlignment="Left" Margin="77,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="17" ToolTip="Enter X Player Name" TabIndex="0"/>
        <TextBlock x:Name="textBlockScore" HorizontalAlignment="Left" Margin="325,143,0,0" TextWrapping="Wrap" Text="Score" VerticalAlignment="Top" Height="19" Width="49" FontSize="16" FontWeight="Bold" RenderTransformOrigin="0.879,-0.142"/>
        <Label x:Name="labelXScore" Content="X" HorizontalAlignment="Left" Margin="308,178,0,0" VerticalAlignment="Top" Height="26" Width="38"/>
        <Label x:Name="labelOScore" Content="O" HorizontalAlignment="Left" Margin="308,206,0,0" VerticalAlignment="Top" Height="26" Width="38"/>
        <Label x:Name="labelDrawScore" Content="Draw" HorizontalAlignment="Left" Margin="308,231,0,0" VerticalAlignment="Top" Height="26" Width="38"/>
        <TextBox x:Name="textXScore" Margin="351,181,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" HorizontalAlignment="Left" Width="25" FontWeight="Bold" FontSize="15" Background="LightCyan" TextAlignment="Center" VerticalContentAlignment="Center" ToolTip="X Player Score."/>
        <TextBox x:Name="textOScore" Margin="351,209,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" HorizontalAlignment="Left" Width="25" FontWeight="Bold" FontSize="15" Background="LightCyan" TextAlignment="Center" VerticalContentAlignment="Center" ToolTip="O Player Score."/>
        <TextBox x:Name="textDrawScore" Margin="352,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" HorizontalAlignment="Left" Width="25" FontWeight="Bold" FontSize="15" Background="LightCyan" TextAlignment="Center" VerticalContentAlignment="Center" ToolTip="Number of Draws."/>
        <Button x:Name="buttonR3C1" Content="" HorizontalAlignment="Left" Margin="10,284,0,0" VerticalAlignment="Top" Height="57" Width="74" TabIndex="9" FontWeight="Black" FontSize="45" Background="WhiteSmoke" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="buttonR3C3" Content="" HorizontalAlignment="Left" Margin="168,284,0,0" VerticalAlignment="Top" Height="57" Width="74" TabIndex="11" FontWeight="Black" FontSize="45" Background="WhiteSmoke" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="labelCurrentPlayer" Content="Current Player" HorizontalAlignment="Left" Margin="203,82,0,0" VerticalAlignment="Top" Height="27" Width="86"/>
        <TextBox x:Name="textOPlayerName" HorizontalAlignment="Left" Margin="300,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="18" ToolTip="Enter O Player Name" TabIndex="1"/>
        <Button x:Name="buttonR1C2" Content="" HorizontalAlignment="Left" Margin="89,160,0,0" VerticalAlignment="Top" Height="57" Width="74" TabIndex="4" FontWeight="Black" FontSize="45" Background="WhiteSmoke" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="buttonR1C3" Content="" HorizontalAlignment="Left" Margin="168,160,0,0" VerticalAlignment="Top" Height="57" Width="74" TabIndex="5" FontWeight="Black" FontSize="45" Background="WhiteSmoke" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="buttonR2C1" Content="" HorizontalAlignment="Left" Margin="10,222,0,0" VerticalAlignment="Top" Height="57" Width="74" TabIndex="6" FontWeight="Black" FontSize="45" Background="WhiteSmoke" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="buttonR1C1" Content="" HorizontalAlignment="Left" Margin="10,160,0,0" VerticalAlignment="Top" Height="57" Width="74" TabIndex="3" FontWeight="Black" FontSize="45" Background="WhiteSmoke" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="buttonReset" Content="_Reset" HorizontalAlignment="Left" Margin="300,274,0,0" VerticalAlignment="Top" Height="28" Width="74" ToolTip="Press to reset the game" TabIndex="12" Click="buttonReset_Click"/>
        <Button x:Name="buttonR2C2" Content="" HorizontalAlignment="Left" Margin="89,222,0,0" VerticalAlignment="Top" Height="57" Width="74" TabIndex="7" FontWeight="Black" FontSize="45" Background="WhiteSmoke" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="buttonR2C3" Content="" HorizontalAlignment="Left" Margin="168,222,0,0" VerticalAlignment="Top" Height="57" Width="74" TabIndex="8" FontWeight="Black" FontSize="45" Background="WhiteSmoke" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="buttonR3C2" Content="" HorizontalAlignment="Left" Margin="89,284,0,0" VerticalAlignment="Top" Height="57" Width="74" TabIndex="10" FontWeight="Black" FontSize="45" Background="WhiteSmoke" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="textCurrentPlayer" HorizontalAlignment="Left" Margin="226,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="40" Height="32" ToolTip="Current player symbol" FontWeight="Bold" FontSize="18" Background="LightCyan" TextAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="buttonExit" Content="_Exit" HorizontalAlignment="Left" Margin="300,312,0,0" VerticalAlignment="Top" Height="29" Width="76" ToolTip="Press to exit the game" TabIndex="13" Click="buttonExit_Click"/>
        <Button x:Name="buttonChoosePlayer" Content="Choose Starting Player" HorizontalAlignment="Left" Margin="29,96,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.526,0.142" Height="44" Width="145" Click="buttonChoosePlayer_Click" ToolTip="Click to Choose Starting Player." TabIndex="2"/>

    </Grid>
</Window>
